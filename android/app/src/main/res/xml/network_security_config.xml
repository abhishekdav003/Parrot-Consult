<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for debugging (development only) -->
    <!-- For production, ensure all URLs use HTTPS -->
    
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Domain-specific configurations -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow your API domain -->
        <domain includeSubdomains="true">api.parrotconsult.com</domain>
        <domain includeSubdomains="true">parrotconsult.com</domain>
        
        <!-- Cloudinary for video hosting -->
        <domain includeSubdomains="true">res.cloudinary.com</domain>
        <domain includeSubdomains="true">cloudinary.com</domain>
        
        <!-- Other CDN/media domains if needed -->
        <domain includeSubdomains="true">ui-avatars.com</domain>
        
        <!-- Development/testing domains (remove in production) -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>